//- map.pug
extends ./layouts/layout.pug

block content
    section#map
        h2(class="animate") Loading
    section.menu
    .buttons
        button.getUserLocation Mijn locatie
    .slider.disabled
        p.timeP #{date}:00
        p Nu
        input(type="range" name="time" id="time" min="0" max="23" value="0")
        p +24
    section.buttomMenu
        .content
        .openMenu 
            p Open Lijst
            img(src="/images/right-arrow.svg")
        .listButton.disabled
            .region 
                label() Selecteer region
                input(type="number" name="region" id="region" min="1" max="1" value="1")
            .list-container
        
