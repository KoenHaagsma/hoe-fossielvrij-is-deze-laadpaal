//- map.pug
extends ./layouts/layout.pug

block content
    section#map
        img(src="/images/placeholderBackground.png")
        div.overlay
            section.info
                h2 Je locatie kon (nog) niet worden achterhaald
                p Het kan zijn dat je locatie niet kon worden achterhaald doordat de locatie permissies niet goed staan, probeer hier opnieuw
                button Geef Toestemming
    section.menu
    .buttons
        button.getUserLocation Mijn locatie
    section.buttomMenu
        .content Vanmiddag om 14:00 is het groenste laadmoment
        .listButton 
            .content Hoi, dit zijn de dichtsbijzijnde groene laadpalen
        
        
